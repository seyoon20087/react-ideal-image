{
  "name": "@seyoon20087/react-ideal-image",
  "version": "0.1.3",
  "description": "Adaptive image component",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/components/IdealImage": {
      "require": "./dist/components/IdealImage/index.cjs",
      "import": "./dist/components/IdealImage/index.mjs"
    },
    "./dist/components/IdealImageWithDefaults": {
      "require": "./dist/components/IdealImageWithDefaults/index.cjs",
      "import": "./dist/components/IdealImageWithDefaults/index.mjs"
    },
    "./dist/components/Media": {
      "require": "./dist/components/Media/index.cjs",
      "import": "./dist/components/Media/index.mjs"
    },
    "./dist/components/MediaWithDefaults": {
      "require": "./dist/components/MediaWithDefaults/index.cjs",
      "import": "./dist/components/MediaWithDefaults/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "add-contributor": "kcd-scripts contributors add",
    "build": "pkgroll --target=node12.0.0",
    "lint": "kcd-scripts lint",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "test:ts": "tsc --noEmit -p ./tsconfig.json",
    "validate": "npm run test:ts && kcd-scripts validate",
    "setup": "npm install && npm run validate -s",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "predeploy": "styleguidist build",
    "deploy": "gh-pages -d styleguide"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "stereobooster <stereobooster@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16.x"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@types/react": "16.9.13",
    "babel-loader": "^8.0.6",
    "gh-pages": "^2.1.1",
    "jest-canvas-mock": "^2.2.0",
    "kcd-scripts": "^1.11.0",
    "pkgroll": "^2.0.2",
    "prettier": "^3.2.5",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-styleguidist": "10.2.0",
    "react-test-renderer": "16.11.0",
    "react-testing-library": "8.0.1",
    "react-waypoint": "npm:@seyoon20087/react-waypoint@^10.4.1",
    "typescript": "^5.4.5",
    "webpack": "^4.41.2"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js",
    "rules": {
      "complexity": [
        "error",
        12
      ],
      "no-case-declarations": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "styleguide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seyoon20087/react-ideal-image.git"
  },
  "bugs": {
    "url": "https://github.com/seyoon20087/react-ideal-image/issues"
  },
  "homepage": "https://github.com/seyoon20087/react-ideal-image#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
